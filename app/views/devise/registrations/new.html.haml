=render "template/header_unlogin"
.sign
  .sign__title
    %h2
      %b 会員情報入力
  .sign__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        %p
          %b name　
          %span.mandatory 必須
        = f.text_field :name, autofocus: true, autocomplete: "name",class:"form",placeholder:"　例)　Like 太郎"

        %p
          %b mail　
          %span.mandatory 必須
        = f.email_field :email, autocomplete: "email",class:"form",placeholder:"　PC・携帯どちらでも可"

        %p
          %b password　
          %span.mandatory 必須
        = f.password_field :password, autocomplete: "off",class:"form",placeholder:"　6文字以上の半角英数字"

        .actions
          = f.submit "Sign up", style:"margin-left: 43%;padding: 5px;margin-top: 20px;margin-bottom: 20px;"

